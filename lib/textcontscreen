import 'package:flutter/material.dart';

class TextContentScreen extends StatelessWidget {
  final String title;
  final String content; // يمكن أن يكون هذا نصًا طويلاً أو حتى Markdown لاحقًا

  const TextContentScreen({
    super.key,
    required this.title,
    required this.content,
  });

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(title),
        backgroundColor: Colors.deepPurple,
      ),
      body: SingleChildScrollView(
        padding: const EdgeInsets.all(16.0),
        child: Text(
          content,
          style: const TextStyle(fontSize: 16.0, height: 1.5), // لتباعد الأسطر
        ),
      ),
    );
  }
}